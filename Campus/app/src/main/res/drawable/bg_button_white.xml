<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 (흰색) -->
    <solid android:color="#FFFFFF" />

    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="12dp" />

    <!-- 안쪽 여백 (선택) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
